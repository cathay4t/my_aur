pkgname=python2-pywbem
_pkgname=pywbem
pkgver=0.8.4
_version='0.8.4'
pkgrel=1
pkgdesc="Python WBEM Client and Provider Interface"
arch=('any')
url='https://github.com/pywbem/pywbem'
license=('LGPLv2.1+')
depends=('python2' 'python2-m2crypto' 'python2-pip')
source=("https://github.com/$_pkgname/$_pkgname/archive/v${_version}.tar.gz")
sha256sums=('861faeb1502a9c436c2f6313efc4c5794dcf7718881967eb8fec68d988362db8')
options=('!libtool')

build() {
  cd $srcdir/$_pkgname-${_version}
  python2 setup.py build || return 1
}

package() {
  cd $srcdir/$_pkgname-${_version}
  python2 setup.py install --root=$pkgdir || return 1
}
